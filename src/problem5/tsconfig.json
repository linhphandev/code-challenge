{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "./src/@types/"
    ],
    "strictNullChecks": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}